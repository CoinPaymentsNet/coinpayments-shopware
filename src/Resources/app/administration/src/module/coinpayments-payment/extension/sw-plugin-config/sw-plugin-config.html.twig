{% block sw_plugin_config_actions_abort %}
    {% parent %}

    {% block sw_plugin_config_actions_coin_test %}
        <sw-button variant="primary" class="sw-plugin-config__save-action" @click.prevent="onCoinTest"
                   v-show="namespace == 'CoinPayments'">
            {{ $tc('coinpayments-payment.configForm.test') }}
        </sw-button>
    {% endblock %}
{% endblock %}

{% block sw_plugin_config_content %}
    <sw-card-view>
        {% block sw_system_config %}
            <sw-system-config :domain="domain"
                              salesChannelSwitchable
                              :salesChannelId="salesChannelId"
                              @config-changed="onConfigChange"
                              ref="systemConfig">
                <template #card-element="{ element, config }">
                    <sw-form-field-renderer
                        v-bind="getBind(element, config)"
                        v-model="config[element.name]"/>
                </template>
            </sw-system-config>
        {% endblock %}
    </sw-card-view>
{% endblock %}
