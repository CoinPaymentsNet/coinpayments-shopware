<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true"/>

        <service id="CoinPayments\Service\ConfigService">
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>

        <service id="CoinPayments\Controller\ConfigController">
            <argument type="service" id="service_container"/>
            <argument type="service" id="Shopware\Core\Framework\Store\Services\StoreService"/>
        </service>

        <service id="CoinPayments\Controller\PaymentController" public="true">
            <argument key="$paymentHandler" type="service" id="CoinPayments\Handler\PaymentHandler"/>
            <argument key="$configService" type="service" id="CoinPayments\Service\ConfigService"/>
            <argument key="$storeService" type="service" id="Shopware\Core\Framework\Store\Services\StoreService"/>
            <argument key="$transactionRepository" type="service" id="order_transaction.repository"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="controller.service_arguments"/>
        </service>

        <service id="CoinPayments\Handler\PaymentHandler">
            <argument type="service" id="Shopware\Core\Checkout\Order\Aggregate\OrderTransaction\OrderTransactionStateHandler"/>
            <argument type="service" id="CoinPayments\Service\ConfigService"/>
            <argument type="service" id="Shopware\Core\Framework\Store\Services\StoreService"/>
            <tag name="shopware.payment.method.async"/>
        </service>
    </services>
</container>



